{
  "compilerOptions": {
    "target": "es2017",
    "noImplicitAny": false,
    "module": "commonjs",
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "allowJs": true,
    "types": [
      "node",
      "mocha"
    ],
    "outDir": "dist/",
    "resolveJsonModule": true
  },
  "include": [
    "./servers",
    "./common"
  ],
  "exclude": [
    "./node_modules/",
    "**/dist",
    "./servers/server_template"
  ]
}